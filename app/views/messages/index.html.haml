%body
  .chat
    = render 'layouts/chat_side'
    .chat-main
      .chat-header.clearfix
        .chat-header--left
          %h2
            = @group.name
          %p.chat-header__users
            Menbers:
            %span.chat-header__user  kazuki
        .chat-header--right
          = link_to "Edit", edit_group_path(@group) ,class: "chat-header--right__edit-btn"
      .chat-body
        %ul.chat-messages
          - @messages.each do |message|
            %li.chat-message
              .chat-message__header.clearfix
                %p.chat-message__header--name
                  = message.user.name
                %p.chat-message__header--time
                  = message.created_at
              %p.chat-message__body
                = message.body
      .chat-footer
        = form_for(@message,url: "messages") do |f|
          .new_message
            .chat-footer__body
              = f.text_area :body, placeholder: "type a message"
            = f.hidden_field :group_id, value: @group.id
            = f.submit "send"
